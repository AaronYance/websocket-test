		                      <groupId>commons-cli</groupId>
		                      <artifactId>commons-cli</artifactId>
		                      <version>1.1</version>
		                      <mainClass>org.apache.commons.cli.BasicParser</mainClass>
		                    </jarResource>
		                  </jarResources>
		                </jnlpFile>
		              </jnlpFiles>
				</configuration>
			</plugin>
